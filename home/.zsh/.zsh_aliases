#!/usr/bin/zsh

# ls
alias ls='ls --color=auto'
alias ll="ls -lhX"
alias la="ls -lAhX"

# other
alias vi="nvim"
alias tree="tre -a"
alias bat="batcat"
alias du="ncdu --color dark"
alias fcd='cd $(find . -type d | fzf)'
alias grep="grep --color=auto"
alias mysql="mysql --help"
alias src="source $HOME/.zshrc"

